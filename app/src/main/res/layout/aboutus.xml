<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="@drawable/shape">

    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="About Me"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/about_us_image_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/oussama_img"
            android:background="@drawable/shape2"/>

        <TextView
            android:id="@+id/about_us_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Étudiant  en  4-é m e année en ingénierie informatique et réseaux .
            Futur ingénieure en informatique et réseau IIR à la recherche d'un stage fin année en développement informatique à partir du premier Juillet 2024 d'une durée de deux mois."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/about_us_contact"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingTop="16dp"
        android:text="Contact : email : oussamaelmajdouly@gmail.com        number : 0663244674"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

</LinearLayout>
