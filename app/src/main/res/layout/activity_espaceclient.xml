<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Username -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <!-- Phone -->
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="16dp"
        android:layout_below="@id/et_username"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <!-- Order Date -->
    <EditText
        android:id="@+id/et_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Order Date"
        android:inputType="date"
        android:padding="16dp"
        android:layout_below="@id/et_phone"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <!-- Reclamation Description -->
    <EditText
        android:id="@+id/et_reclamation_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reclamation Description"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:padding="16dp"
        android:layout_below="@id/et_order_date"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        android:textSize="16sp" />

    <!-- Select Image Button -->


    <!-- ImageView to Display Selected Image -->
    <ImageView
        android:id="@+id/iv_selected_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/et_reclamation_description"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:background="@drawable/rounded_imageview" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit_reclamation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Reclamation"
        android:layout_below="@id/iv_selected_image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:textColor="@color/blue_violet"
        android:textSize="16sp"
        android:enabled="false" />
</RelativeLayout>
